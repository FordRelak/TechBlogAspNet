@model List<Article>
<section class="section first-section">
	<div class="container-fluid">
		<div class="masonry-blog clearfix f-center">
			<div class="first-slot">
				<div class="masonry-box post-media">
					<img src="~/images/@Model[0].TitleImagePath" alt="" class="img-fluid">
					<div class="shadoweffect">
						<div class="shadow-desc">
							<div class="blog-meta">
								<span class="bg-orange"><a href="tech-category-01.html" title="">@Model[0].Tag</a></span>
								<h4><a href="tech-single.html" title="">@Model[0].Title</a></h4>
								<small><a href="tech-single.html" title="">@Model[0].DateTime</a></small>
								<small><a href="tech-author.html" title="">by @Model[0].Author</a></small>
							</div><!-- end meta -->
						</div><!-- end shadow-desc -->
					</div><!-- end shadow -->
				</div><!-- end post-media -->
			</div><!-- end first-side -->

