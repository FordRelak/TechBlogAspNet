@model ArticleListViewModel
<section class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
				<div class="page-wrapper">
					<div class="blog-top clearfix">
						<h4 class="pull-left">Recent News <a href="#"><i class="fa fa-rss"></i></a></h4>
					</div>

					<div class="blog-list clearfix">
						@for (int i = 0; i < 3; i++)
						{
							<div class="blog-box row">
								<div class="col-md-4">
									<div class="post-media">
										<a href="tech-single.html" title="">
											<img src="~/images/@Model.Articles[i].TitleImagePath" alt="" class="img-fluid">
											<div class="hovereffect"></div>
										</a>
									</div>
								</div>

								<div class="blog-meta big-meta col-md-8">
									<h4><a href="tech-single.html" title="">@Model.Articles[i].Title</a></h4>
									<p>@Model.Articles[i].SubTitle</p>
									<small class="firstsmall"><a class="bg-orange" href="tech-category-01.html" title="">@Model.Articles[i].Tag</a></small>
									<small><a href="tech-single.html" title="">@Model.Articles[i].DateTime</a></small>
									<small><a href="tech-author.html" title="">by @Model.Articles[i].Author</a></small>
									<small><a href="tech-single.html" title=""><i class="fa fa-eye"></i> 1114</a></small>
								</div>
							</div>

							<hr class="invis">
						}

						<div class="row">
							<div class="col-lg-10 offset-lg-1">
								<div class="banner-spot clearfix">
									<div class="banner-img">
										<img src="upload/banner_02.jpg" alt="" class="img-fluid">
									</div>
								</div>
							</div>
						</div>

						<hr class="invis">

						@for (int i = 3; i < Model.Articles.Count; i++)
						{
							<div class="blog-box row">
								<div class="col-md-4">
									<div class="post-media">
										<a href="tech-single.html" title="">
											<img src="~/images/@Model.Articles[i].TitleImagePath" alt="" class="img-fluid">
											<div class="hovereffect"></div>
										</a>
									</div>
								</div>

								<div class="blog-meta big-meta col-md-8">
									<h4><a href="tech-single.html" title="">@Model.Articles[i].Title</a></h4>
									<p>@Model.Articles[i].SubTitle</p>
									<small class="firstsmall"><a class="bg-orange" href="tech-category-01.html" title="">@Model.Articles[i].Tag</a></small>
									<small><a href="tech-single.html" title="">@Model.Articles[i].DateTime</a></small>
									<small><a href="tech-author.html" title="">by @Model.Articles[i].Author</a></small>
									<small><a href="tech-single.html" title=""><i class="fa fa-eye"></i> 1114</a></small>
								</div>
							</div>

							<hr class="invis">
						}

					</div>
				</div>

				<hr class="invis">

				<div class="row">
					<div class="col-md-12">
						<nav aria-label="Page navigation">
							<ul page-model="@Model.PageInfo" 
								page-action="Index"
								class="pagination justify-content-start">
							</ul>
						</nav>
					</div>
				</div>
			</div>
			@* SIDEBAR *@
			@await Component.InvokeAsync("SideBar")
		</div>
	</div>
</section>